<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#eeeeee"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_lab_share"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="分享到" />

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_lab_share"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_share_appfriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="5dp"
                android:scaleType="center"
                android:src="@drawable/icon_share_appfriend" />

            <ImageView
                android:id="@+id/iv_share_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="5dp"
                android:scaleType="center"
                android:src="@drawable/icon_share_wx" />

            <ImageView
                android:id="@+id/iv_share_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="5dp"
                android:scaleType="center"
                android:src="@drawable/icon_share_qq" />

            <ImageView
                android:id="@+id/iv_share_weixin_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="5dp"
                android:scaleType="center"
                android:src="@drawable/icon_share_wxfriend" />
        </LinearLayout>

        <TextView
            android:id="@+id/challenges_data"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/ll_share"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="导出数据"
            android:textColor="@color/skyblue"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/challenges_QR"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/challenges_data"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="查看二维码"
            android:textColor="@color/skyblue"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/exit_challenges"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/challenges_QR"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="退出挑战"
            android:textColor="@color/skyblue"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cancel_challenges"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/exit_challenges"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="取消挑战"
            android:textColor="@color/skyblue"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/cancel_challenges"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/skyblue"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>