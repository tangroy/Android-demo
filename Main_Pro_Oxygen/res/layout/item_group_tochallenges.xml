<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp" >

        <com.oxygen.www.widget.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/icon_def" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/iv_head"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_member_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_select_member_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_member_count"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/radio"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/iv_invite_friend_bg"
                android:button="@null"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="10dp" />
            <TextView
                android:id="@+id/tv_joined"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="已加入"
                android:textColor="@color/grey"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                  android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                  />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>