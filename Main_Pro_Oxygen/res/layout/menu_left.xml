<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_leftmenu"
    android:layout_width="245dp"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_heard"
        android:layout_width="245dp"
        android:layout_height="80dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="65dp"
        android:orientation="horizontal" >

        <com.oxygen.www.widget.CircleImageView
            android:id="@+id/iv_headimage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <HorizontalScrollView
                android:id="@+id/hsv_sports"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="15dp" >
            </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_heard"
        android:layout_marginLeft="25dp" />

    <LinearLayout
        android:id="@+id/ll_signature"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/top_line"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#bab7b3"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_signature"
        android:layout_marginLeft="25dp" />

    <RelativeLayout
        android:id="@+id/rl_myfriends"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/bottom_line"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_myfriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <TextView
            android:text="我的好友"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_myfriends"
            android:textColor="#bab7b3"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_myscore"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/rl_myfriends"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_myscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <TextView
            android:text="我的成绩"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_myscore"
            android:textColor="#bab7b3"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_mycollect"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/rl_myscore"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_mycollect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <TextView
            android:text="我的收藏"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_mycollect"
            android:textColor="#bab7b3"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_set"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:src="@drawable/icon_setting"
                android:id="@+id/iv_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="设置"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#bab7b3"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="#bab7b3" />

        <LinearLayout
            android:id="@+id/ll_help"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:src="@drawable/icon_help"
                android:id="@+id/iv_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="帮助"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#bab7b3"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>