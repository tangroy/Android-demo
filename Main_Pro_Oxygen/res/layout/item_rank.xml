<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:descendantFocusability="beforeDescendants"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/rl_rank"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tv_sale"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black" />

        <com.oxygen.www.widget.CircleImageView
            android:id="@+id/iv_headimg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_sale" />
        
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="布鲁图斯"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_headimg"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black" />
        
        <ImageView
	        android:id="@+id/event_record"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="8dp"
	        android:layout_toLeftOf="@+id/tv_type_data"
	        android:src="@drawable/icon_input_hand"
	        android:visibility="gone" />

        <TextView
            android:id="@+id/tv_type_data"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1.4公里"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/st_manage"
            android:layout_marginRight="40dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/st_manage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:focusable="false"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:checked="true"
            android:button="@null"
            android:background="@drawable/iv_invite_friend_bg"
            android:thumbTextPadding="22dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_below="@id/rl_rank"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey" />

</RelativeLayout>