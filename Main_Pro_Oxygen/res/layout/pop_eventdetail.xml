<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#eeeeee" >

        <TextView
            android:id="@+id/tv_lab_share"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:gravity="center"
            android:text="邀请" />

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/tv_lab_share"
            android:visibility="gone"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/iv_share_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="乐运动"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:scaleType="center"
                android:drawableTop="@drawable/icon_share_appfriend"/>
            
            <TextView
                android:id="@+id/iv_share_weixin"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="微信"
                android:padding="5dp"
                android:scaleType="center"
                android:drawableTop="@drawable/icon_share_wx"/>

            <TextView
                android:id="@+id/iv_share_qq"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="QQ"
                android:padding="5dp"
                android:scaleType="center"
                android:drawableTop="@drawable/icon_share_qq"/>

            <TextView
                android:id="@+id/iv_share_weixin_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_share_wxfriend"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:scaleType="center"
                android:text="朋友圈" />

        </LinearLayout>

        <TextView
            android:id="@+id/checkin"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/ll_share"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="签到"
            android:textColor="@color/skyblue"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/update_evnent"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/checkin"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="修改活动信息"
            android:textColor="@color/skyblue"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/watch_QR_cord"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/update_evnent"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="查看二维码"
            android:textColor="@color/skyblue"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/exit_evnent"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/watch_QR_cord"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="退出活动"
            android:textColor="@color/skyblue"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cancel_evnent"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/exit_evnent"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="取消活动"
            android:textColor="@color/skyblue"
            android:textSize="16sp" />
     

        <TextView
            android:id="@+id/cancel"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/cancel_evnent"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/skyblue"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>