<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0" >

    <RelativeLayout
        android:id="@+id/rl_businesses"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/iv_businesses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_businesses" />

        <TextView
            android:id="@+id/tv_businesses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_businesses"
            android:layout_centerVertical="true"
            android:text="@string/businesses"
            android:textColor="@color/black"
            android:textSize="17sp" />
        <ImageView 
            android:src="@drawable/arrows_gray"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
             android:layout_marginRight="20dp"
             android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_posts"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rl_businesses"
        android:layout_marginTop="20dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/iv_posts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_posts" />

        <TextView
            android:id="@+id/tv_posts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_posts"
            android:text="@string/posts"
            android:textColor="@color/black"
            android:textSize="17sp" />
        <ImageView 
            android:src="@drawable/arrows_gray"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
             android:layout_marginRight="20dp"
             android:layout_alignParentRight="true"
            />
    </RelativeLayout>

</RelativeLayout>